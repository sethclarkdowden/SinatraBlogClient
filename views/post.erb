<div class="post">
	<div class="container">
		<h1 class="title"><%= @post.title %></h1>
		<p class="date"> Tags: 
			<% @tags.each do |tag| %> 
				<%= tag.name %>
			<% end %>
		</p>
		<p> <%= @post.content %> </p>
	</div>
</div>

<h3>New Comment:</h3>
<form action="/post/<%= @post.id %>/comment/create" method="post" id="post">
	<p>
		Name: <br />
		<input type="text" name="comment[name]" id="name"/>
	</p>
	<p>
		Comment: <br />
		<textarea type="text" name="comment[body]" id="content" rows="5" cols="40">put your comment here ...</textarea>
	</p>
	<input type="submit" value="Save" />
</form>

<h3>Comments:</h3>
<% @comments.each do |comment| %>
	<div class="">
		<p><%= comment.name %></p>
		<p><%= comment.body %></p>
	</div><br/>
<% end %>

